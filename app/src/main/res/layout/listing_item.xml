<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/listing_card_bg"
        android:elevation="5dp"
        android:layout_margin="10dp">

    <ImageView
            android:id="@+id/listing_image"
            android:layout_width="120dp"
            android:layout_height="140dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            android:src="@drawable/pikachu_toy"
            android:scaleType="centerCrop" />

    <TextView
            android:id="@+id/listing_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samosa"
            android:text="Brand new Pikachu teddy"
            android:textColor="@color/blue"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/listing_image"
            app:layout_constraintStart_toEndOf="@id/listing_image"
            android:layout_marginStart="10dp"
            android:paddingBottom="4dp"/>

    <ImageView
            android:id="@+id/location_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/location_icon"
            android:tintMode="screen"
            app:tint="@color/grey"
            app:layout_constraintStart_toEndOf="@id/listing_image"
            app:layout_constraintTop_toBottomOf="@id/listing_name"
            android:layout_marginStart="9dp"
            android:layout_marginTop="2dp" />


    <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="Tamworth"
            app:layout_constraintStart_toEndOf="@id/location_icon"
            app:layout_constraintTop_toBottomOf="@id/listing_name" />

    <ImageView
            android:id="@+id/user_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/user_icon"
            android:tintMode="screen"
            app:tint="@color/grey"
            app:layout_constraintStart_toEndOf="@id/location_text"
            app:layout_constraintTop_toBottomOf="@id/listing_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"/>

    <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="skettle1"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/user_icon"
            app:layout_constraintTop_toBottomOf="@id/listing_name" />

    <TextView
            android:id="@+id/description_text"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:text="A beautiful teddy, looked after and barely used! Limited edition. Looking to swap for different Pokemon toys or teddies if possible. Thanks."
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/listing_image"
            app:layout_constraintTop_toBottomOf="@id/location_icon" />






</androidx.constraintlayout.widget.ConstraintLayout>