<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.SignUpActivity">

    <TextView
            android:id="@+id/welcome_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/sign_in_logo"
            app:layout_constraintTop_toTopOf="@id/sign_in_logo"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_logo"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/inter"
            android:text="The world of"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/sign_in_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:text="ToySwap"
            android:fontFamily="@font/samosa"
            android:textColor="@color/blue"
            android:textSize="30sp" />

    <TextView
            android:id="@+id/welcome_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/sign_in_logo"
            app:layout_constraintTop_toTopOf="@id/sign_in_logo"
            app:layout_constraintBottom_toBottomOf="@id/sign_in_logo"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inter"
            android:text="awaits!"
            android:textSize="18sp" />

    <TextView
            android:id="@+id/details_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sign_in_logo"
            app:layout_constraintStart_toStartOf="@id/welcome_start"
            android:layout_marginTop="75dp"
            android:text="Just a few details:"
            android:textSize="18sp" />


    <EditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="username"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/details_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

    <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/username_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

    <EditText
            android:id="@+id/location_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="where are you?"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/password_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_field"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/blue"
            android:text="Sign me up!"
            android:fontFamily="@font/inter" />

</androidx.constraintlayout.widget.ConstraintLayout>